<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_root"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/dp_100"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/llLeft"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_100">


        <ImageView
            android:layout_centerInParent="true"
            android:id="@+id/ivAvatar"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            />
        <TextView
            android:id="@+id/tvUpReadCount"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:background="@color/colorAccent"
            android:gravity="center"
            />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlRight"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_toRightOf="@+id/llLeft"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/tvTime"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="@dimen/dp_5"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/black"
                    android:text="小Q"/>
                <TextView
                    android:id="@+id/tvTime"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/public_text_hint_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20:20"/>



            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvContent"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/ivRight"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="@dimen/dp_5"
                android:textColor="@color/public_text_hint_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="你好啊dsf"/>
                <ImageView
                    android:layout_centerVertical="true"
                    android:id="@+id/ivRight"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/public_text_hint_color"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@color/public_text_hint_color"
                    />
            </RelativeLayout>

        </LinearLayout>

        <View
            android:layout_alignParentBottom="true"
            style="@style/SplitLineStyle"
            />

    </RelativeLayout>

</RelativeLayout>